//Code: C program to implement a simple calculator that performs addition,subtraction,multiplication & division based on user input.
//Author: Saba Raushan Hussain
#include <stdio.h>

// Function with arguments and with return value
int add(int a, int b) {
    return a + b;
}

// Function with arguments and without return value
void multiply(int a, int b) {
    printf("Multiplication: %d * %d = %d\n", a, b, a * b);
}

// Function without arguments and with return value
float divide() {
    int a, b;
    printf("Enter two numbers for division (numerator and denominator): ");
    scanf("%d%d", &a, &b);
    
    if (b != 0) {
        return (float)a / b;
    } else {
        printf("Error! Division by zero.\n");
        return -1;  // Return -1 to indicate an error
    }
}

// Function without arguments and without return value
void printMenu() {
    printf("\nSimple Calculator Menu:\n");
    printf("1. Addition\n");
    printf("2. Multiplication\n");
    printf("3. Division\n");
    printf("4. Exit\n");
}

int main() {
    int choice, num1, num2;
    float result;

    while (1) {
        printMenu();
        printf("Enter your choice: ");
        scanf("%d", &choice);
        
        switch (choice) {
            case 1:
                // Using function with arguments and with return value (Addition)
                printf("Enter two numbers for addition: ");
                scanf("%d%d", &num1, &num2);
                printf("Addition: %d + %d = %d\n", num1, num2, add(num1, num2));
                break;
                
            case 2:
                // Using function with arguments and without return value (Multiplication)
                printf("Enter two numbers for multiplication: ");
                scanf("%d%d", &num1, &num2);
                multiply(num1, num2);
                break;
                
            case 3:
                // Using function without arguments and with return value (Division)
                result = divide();
                if (result == -1) {
                    printf("Division could not be performed.\n");
                } else {
                    printf("Division result: %.2f\n", result);
                }
                break;
                
            case 4:
                // Exit the program
                printf("Exiting...\n");
                return 0;
                
            default:
                printf("Invalid choice! Please try again.\n");
        }
    }

    return 0;
}
